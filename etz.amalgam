  .long      1                          # p_type
  .long      0                          # p_offset
  .long      vaddr                      # p_vaddr
  .long      0                          # p_paddr
  .long      filesz                     # p_filesz
  .long      memsz                      # p_memsz
  .long      7                          # p_flags
